    public function find(int $id, string $table = null)
    {
        if($table == null){
            $table = $this->table;
        }
        $query = $this->pdo->prepare("SELECT * FROM {$table} WHERE id = :id");
        $query->execute(['id' => $id]);
        $item = $query->fetch(); //fetchAll? FETCH_ASSOC?
        return $item;
    }






